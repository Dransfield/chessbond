                  required="string"
                  ng-required="string"
                  ng-change="PrefSelectChanged('BirthMonth','<%-req.session.passport.user%>',setBirthmonth)"
                  >
                  <option ng-repeat="month in birthmonths" ng-value="{{month.name}}">
                     {{month.name}}
                  </option>
               </select>
				   <select class="form-control"
                  ng-model="User.BirthYear"
                  name="string"
                  
                  required="string"
                  ng-required="string"
