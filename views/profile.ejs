       		<% if (req.session.passport.user==lookedatuser){ %>
       			<button ng-click="editgender=!editgender" class="btn btn-sml">...
       			 <div ng-show ="editgender" style="display:flex">
				  <select class="form-control"
                  ng-model="User.Gender"
                  name="string"
                  
                  required="string"
                  ng-required="string"
